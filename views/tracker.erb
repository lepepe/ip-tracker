<div class="inner cover">
  <table class="table table-hover table-sm">
    <thead>
      <tr>
        <th colspan="2">Lookup IP Address Location For IP: <%= @location[0].data["ip"] %></th>
      </tr>
    </thead>
    <tbody>
      <% @location[0].data.each do |key, value| %>
      <tr>
        <td><%= key.gsub("_", " ").capitalize %></td>
        <td><%= value %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <iframe
    width="100%"
    height="100%"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA1eNpk2xlLeh8SofUttUQ5TtA7-NlvlCk&q=<%= @location[0].data["city"] %>+<%= @location[0].data["country_name"] %>" allowfullscreen>
  </iframe>
</div>
